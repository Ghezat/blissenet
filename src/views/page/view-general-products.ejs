    }

    .blueMask{
        background-color:  rgba(101, 153, 239, 0);
        transition: all 1s ease;
    }

    .blueMask:hover{
        background-color: rgba(101, 153, 239, 0.3);
        outline: 1px solid #6599ef;
        cursor: pointer;
    }

    .textLight{
    color: white;
    }


    .colorSelected{
        width: 20px;
        height: 20px;
        border-radius: 3px;
        border: 1px solid grey;
    }

    .emoji{
        cursor: pointer;
        transition: 0.3s;
    }

    .emoji:hover{
        font-size: 18px;
    }

    .color-cube{
        width: 30px;
        height: 30px;
        display: inline-block;
        margin: 3px;
        transition: 0.5s;
    }
    
    .color-cube:hover{
        cursor: pointer;
        outline: 2px solid lightskyblue;
    }

    .deleteNote{
        padding: 3px;
        color: #cbd1d6;
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 3px;
        opacity: 0;
        transition: 0.5s;
    }

    .note{
