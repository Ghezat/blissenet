    <div class="contentInvoices closed mb-4 px-5" style="height: 50%;">
     
      <div class="row m-0 d-flex justify-content-center my-4 p-0" style="width: 100%;"> 
          <ul class="nav nav-tabs col-lg-11 mt-2">

          <li class="nav-item">
            <a class="nav-link active" id="facturas" href="#">Facturas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="recibos" href="#">Recibos</a>
          </li>
      
          </ul>

          <div class="boxInvoices col-lg-11 mt-2">

