    display: block;
  }

  .closed{
    display: none !important;
  }

  .textLight{
      /* trabaja en conjunto con themaTextLight */
      color: white;
  }

  @media screen and (min-width: 290px) and (max-width: 499px ){

    .containerPayRegister{
      display: flex;
      flex-direction: column;
    }

