<script>
    const search = document.getElementById('search');
    const cardBuy = document.getElementById('cardBuy');
    const gestorADS = document.getElementById('gestorADS');

    const content_search = document.querySelector('.content_search');
    const content_cardBuy = document.querySelector('.content_cardBuy');
    const content_gestorADS = document.querySelector('.content_gestorADS');

    search.addEventListener('click', ()=>{
        content_search.classList.remove('close');
        content_cardBuy.classList.add('close');
        content_gestorADS.classList.add('close');
    });

    cardBuy.addEventListener('click', ()=>{
        content_search.classList.add('close');
        content_cardBuy.classList.remove('close');
        content_gestorADS.classList.add('close');
    });

    gestorADS.addEventListener('click', ()=>{
        content_search.classList.add('close');
        content_cardBuy.classList.add('close');
        content_gestorADS.classList.remove('close');
    });

    
</script>